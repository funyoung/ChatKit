<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/dialogRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@id/dialogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="19dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:text="nnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn"
        android:ellipsize="end"
        android:fontFamily="@string/font_fontFamily_medium"
        android:includeFontPadding="false"
        android:maxLines="1" />

    <TextView
        android:id="@id/dialogLastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogName"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"
        android:text="hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1" />


    <TextView
        android:id="@+id/dateHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogLastMessage"
        android:text="@string/date_hint"
        android:textSize="12sp"
        android:textColor="#999999"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@id/dialogDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogLastMessage"
        android:layout_toEndOf="@id/dateHint"
        android:textSize="12sp"
        android:textColor="#999999"
        android:ellipsize="end"
        android:maxLines="1" />

</RelativeLayout>
