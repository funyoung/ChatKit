<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/pic_11"
                android:background="@drawable/circle_background"
                android:layout_alignParentEnd="true"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:text="@string/sample_title"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <!-- 搜索框 -->
        <LinearLayout
            android:id="@+id/hi_chat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点我聊天"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>

        <!-- 警用AI智能体 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI智能体服务"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/tv_person_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/pic_1n"
                    android:background="@drawable/feature_button_background"
                    android:padding="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人像核验"
                    android:textColor="#ffffff"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_id_verify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/pic_1n2"
                    android:background="@drawable/feature_button_background"
                    android:padding="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证核验"
                    android:textColor="#ffffff"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 警务知识查询 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="警务知识查询"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tv_my_knowledge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的知识库"
                        android:textColor="#333333"
                        android:background="@drawable/knowledge_button_background"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="24dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_shared_knowledge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共享知识库"
                        android:textColor="#333333"
                        android:background="@drawable/knowledge_button_background"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="24dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/tv_law_consult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法律法规咨询"
                        android:textColor="#333333"
                        android:background="@drawable/knowledge_button_background"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="24dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 原子服务能力 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="原子服务能力"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/tv_ocr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OCR识别"
                    android:textColor="#333333"
                    android:background="@drawable/atom_ability_button_background"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_tts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TTS识别"
                    android:textColor="#333333"
                    android:background="@drawable/atom_ability_button_background"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="4dp"/>

            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:id="@+id/tv_translation"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_columnWeight="1"-->
<!--                android:orientation="vertical"-->
<!--                android:gravity="center"-->
<!--                android:padding="16dp">-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="中英翻译"-->
<!--                    android:textColor="#333333"-->
<!--                    android:background="@drawable/atom_ability_button_background"-->
<!--                    android:paddingVertical="16dp"-->
<!--                    android:paddingHorizontal="40dp"/>-->

<!--            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/tv_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多工具"
                    android:textColor="#333333"
                    android:background="@drawable/atom_ability_button_background"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="4dp"/>

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>